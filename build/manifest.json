{
	"manifest_version" : 2,
	
	"name" : "__MSG_app_name__",
	"description" : "__MSG_app_description__",
	"version" : "0.1.4",
	"default_locale" : "ru",
	"author": "azbn",
	
	"icons" : {
		"16" : "img/16x16.png",
		"32" : "img/32x32.png",
		"48" : "img/48x48.png",
		"128" : "img/128x128.png"
	},
	
	"permissions" : [
		"activeTab",
		"alarms",
		"storage",
		"notifications",
		"unlimitedStorage",
		"proxy",
		"contextMenus",
		"history",
		"background",
		"proxy",
		"browsingData",
		"http://*/*",
		"https://*/*"
	],
	
	"content_scripts" : [
		{
			"matches" : [
				"http://*/*",
				"https://*/*"
			],
			"js" : [
				"js/libs/jquery/jquery.min.js",
				"js/content/mutations.js"
			],
			"css" : []
		}
	],
	
    "web_accessible_resources" : [
		"img/*",
		"css/*"
    ],
	
	"background" : {
		"scripts" : [
			"js/background/main.js"
		],
		"persistent" : false,
		"_persistent постоянная работа" : true
	}

}